<section id="contact" class="mx-5 px-5">
  <h3>Contact</h3>
  <form
    id="contact-form"
    class="mt-3 form-floating"
    action="/message"
    method="post"
  >
    <div class="form-floating mb-3">
      <input
        type="text"
        class="form-control"
        id="floatingName"
        placeholder="Jean Dupont"
        name="floatingName"
      />
      <label for="floatingName" id="nameLabel">Prenom</label>
    </div>
    <span id="error-floatingName"></span>
    <div class="form-floating mb-3">
      <input
        type="email"
        class="form-control"
        id="floatingMail"
        placeholder="name@example.com"
        name="floatingMail"
      />
      <label for="floatingMail" id="mailLabel">Adresse Email</label>
    </div>
    <span id="error-floatingMail"></span>
    <div class="form-floating mb-3">
      <textarea
        class="form-control"
        placeholder="Leave a comment here"
        id="floatingMessage"
        style="height: 150px"
        name="floatingMessage"
      ></textarea>
      <label for="floatingMessage" id="messageLabel">Message</label>
    </div>

    <span id="error-floatingMessage"></span>
    <div class="d-flex justify-content-end">
      <button type="submit" class="btn btn-primary px-5">Envoyer</button>
    </div>
  </form>
  <div id="form-feedback" class="mb-3"></div>
</section>
